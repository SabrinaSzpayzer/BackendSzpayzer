doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Vista de Productos
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
    body 
        div(class="container mt-3")
            div(class="jumbotron")
                h1 Vista de Productos
                br
                if listExists
                    div(class="table-responsive")
                        table(class="table table-dark")
                            tr
                                th Nombre
                                th Precio
                                th Foto
                            each product in displayProduct
                                tr
                                    td= product.title
                                    td= "$" + product.price
                                    td
                                        img(src=product.thumbnail width="50px")                              
                else
                    h3(class="alert alert-warning") No se encontraron productos
                br
                a(href="/" type="button" class="btn btn-primary") Cargar un nuevo producto