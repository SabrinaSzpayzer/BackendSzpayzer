{{#if listExists}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Foto</th>
                <th>Stock</th>
            </tr>
            {{#each displayProduct}}
            <tr>  
                <td>{{this.code}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>${{this.price}}</td>
                <td><img src="{{this.thumbnail}}" width="50px"></td>
                <td>{{this.stock}}</td>                      
            </tr>
            {{/each}}
        </table>
    </div>            
{{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
{{/if}}